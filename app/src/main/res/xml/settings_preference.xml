<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="confirm_rating_alert"
        android:title="@string/confirm_rating_alert" />

    <ListPreference
        android:defaultValue="true"
        android:entries="@array/look_up_categories"
        android:entryValues="@array/categories_values"
        android:key="category_choice"
        android:summary="%s"
        android:title="@string/look_up_category" />

    <EditTextPreference
        android:defaultValue="User"
        android:key="username"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Enter you name here" />

</PreferenceScreen>