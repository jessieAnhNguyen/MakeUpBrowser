<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="confirm_settings_alert"
        android:title="@string/show_product_alert"/>

    <ListPreference
        android:summary="%s"
        android:defaultValue="0"
        android:entries="@array/look_up_categories"
        android:entryValues="@array/categories_values"
        android:key="category_choice"
        android:title="@string/look_up_category"/>

</PreferenceScreen>