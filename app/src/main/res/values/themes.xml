<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MakeUpBrowser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charm_pink</item>
        <item name="colorPrimaryVariant">@color/metallic_silver</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/Champagne</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/metallic_silver</item>
        <item name="colorSecondaryVariant">@color/laurel_green</item>
        <item name="colorOnSecondary">@color/Champagne</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DarkModeTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/puce</item>
        <item name="colorPrimaryVariant">@color/Champagne</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/metallic_silver</item>
        <item name="colorSecondaryVariant">@color/laurel_green</item>
        <item name="colorOnSecondary">@color/Champagne</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>